{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },

  "rules": {

    "interface-name": [
      false,
      "never-prefix"
    ],

    "object-literal-sort-keys": false,

    "ordered-imports": true
  }
}
